<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a2a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.north.socket.client.awaitPayment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a2a2a"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/relLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="#2a2a2a">

            <Button
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="#F28500"
                android:onClick="callMswipe"
                android:text="@string/card"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:background="#F28500"
                android:onClick="callCash"
                android:text="@string/card_history"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="New Text"
                android:textColor="#ebebeb"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/paymentLed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/green" />

            <LinearLayout
                android:id="@+id/leftLinearlayout"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/taskButton"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="360dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/rightLinearlayout"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/taskButton"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="360dp"
                android:orientation="vertical" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
